<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">3dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleText</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:theme">@style/ToolbarThemeOverlay</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarSubtitleText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ToolbarThemeOverlay">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white_a30</item>
    </style>

</resources>